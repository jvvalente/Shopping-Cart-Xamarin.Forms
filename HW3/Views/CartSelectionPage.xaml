<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="HW3.Views.CartSelectionPage">

    <ContentPage.Content>

        <StackLayout HorizontalOptions="Center">

            <Label Text="How many would you like to remove?" HorizontalTextAlignment="Center" FontSize="25"/>
            <Label x:Name="cartName" HorizontalTextAlignment="center" FontSize="30"/>
            <Label x:Name="cartPrice" HorizontalTextAlignment="center" FontSize="25"/>
            <Label x:Name="onCart" HorizontalTextAlignment="center" FontSize="20"/>
            <Label x:Name="cartDescription" HorizontalTextAlignment="center" FontSize="20"/>
            <Label x:Name="sliderCart" FontSize="25" HorizontalTextAlignment="Center"/>
            <Slider x:Name="sliderC"
                    Value="1"
                    Minimum="0"
                    Maximum="100"
                    ValueChanged="slidercart_changed"/>
                       
            <Button Text="Remove"
                     x:Name="removeButton"
                     Clicked="removeButton_clicked"/>
             <Button Text="Back"
                     x:Name="backCartButton"
                     Clicked="backCartButton_clicked"/>
        </StackLayout>

    </ContentPage.Content>

</ContentPage>
